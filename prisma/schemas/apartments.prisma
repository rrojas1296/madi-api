enum ApartmentStatus {
  AVAILABLE
  LEASED
  MAINTENANCE
}

enum ApartmentCurrencies {
  PEN
  USD
  EUR
}

enum ApartmentCondition {
  GOOD
  MAINTENANCE
  REMODELATED
}

model Apartments {
  id             String              @id @default(uuid())
  name           String
  code           String
  address        String
  floor          Int
  area           Decimal             @db.Decimal(10, 2)
  status         ApartmentStatus
  parking        String?
  persons        Int
  rooms          Int
  bathrooms      Int
  floors         Int
  condition      ApartmentCondition
  furnished      Boolean             @default(false)
  pets           Boolean             @default(false)
  monthlyFee     Decimal             @db.Decimal(10, 2)
  garanty        Decimal             @db.Decimal(10, 2)
  currency       ApartmentCurrencies
  maintenanceFee Decimal             @db.Decimal(10, 2)
}
